@using exchaD.Data
@model IEnumerable<Diary>
@{
    ViewData["Title"] = "日記一覧";
}

<h1>日記一覧</h1>
<div class="headerline1"></div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover mytbl">
    <thead>
        <tr class="mytr">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.pass)</th>
            <th>@Html.DisplayNameFor(model => model.note)</th>
            <th>@Html.DisplayNameFor(model => model.last)</th>
            <th>@Html.DisplayNameFor(model => model.pub)</th>
            <th>@Html.DisplayNameFor(model => model.excha)</th>
            <th>@Html.DisplayNameFor(model => model.writa)</th>
            <th>@Html.DisplayNameFor(model => model.retTime)</th>
            <th>@Html.DisplayNameFor(model => model.exid)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.pass)</td>
            <td>@Html.DisplayFor(modelItem => item.note)</td>
            <td>@Html.DisplayFor(modelItem => item.last)</td>
            <td>@Html.DisplayFor(modelItem => item.pub)</td>
            <td>@Html.DisplayFor(modelItem => item.excha)</td>
            <td>@Html.DisplayFor(modelItem => item.writa)</td>
            <td>@Html.DisplayFor(modelItem => item.retTime)</td>
            <td>@Html.DisplayFor(modelItem => item.exid)</td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
